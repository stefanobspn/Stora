<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_quick_actions_card"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivActionIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/icon"
        android:background="@drawable/bg_icon_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvActionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/quick_action_card_placeholder"
        android:textStyle="bold"
        style="@style/AppText.CardLight"
        app:layout_constraintTop_toBottomOf="@id/ivActionIcon"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>